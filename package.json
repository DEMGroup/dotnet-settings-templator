{
  "name": "dotnet-settings-templator",
  "version": "0.0.0",
  "description": "A handlebars templator for converting a appsettings.tmpl.json to a fully shimmed appsettings.json.",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "build:ci": "npm run build && npm run format-check && npm run test:ci && npm run lint && npm run package",
    "format": "prettier --write src/**/*.ts",
    "format-check": "prettier --check src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --passWithNoTests --ci",
    "test:watch": "jest --watch --passWithNoTests",
    "all": "npx rimraf ./out ./testReports ./dist && npm run build && npm run format && npm run lint && npm test && npm run package"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@types/glob": "^8.0.1",
    "@types/hbs": "^4.0.1",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@typescript-eslint/parser": "^5.50.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.33.0",
    "eslint-plugin-github": "^4.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "fs": "^0.0.1-security",
    "handlebars": "^4.7.7",
    "hbs": "^4.2.0",
    "jest": "^29.4.2",
    "jest-junit": "^15.0.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
